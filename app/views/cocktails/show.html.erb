<h1><%= @cocktail.name %></h1>

<h3>Ingredients:</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Remove", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: 'ml-3 text-danger'
     %>
     </li>
  <% end %>
</ul>

<%= render './doses/form' %>
